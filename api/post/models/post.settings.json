{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "creation_date": {
      "type": "date",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "category": {
      "model": "category",
      "via": "posts"
    },
    "preview_content": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "post.banner",
        "post.text"
      ]
    }
  }
}
